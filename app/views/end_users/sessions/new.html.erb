<body class= "topbody">
  <div class="container">
    <div class="row">
      <div>会員の方はこちらからログイン</div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <% f.label :email %>メールアドレス<br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <% f.label :password %>パスワード<br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "genre", :style => "margin:20px;"%>
      </div>
      パスワードを忘れた方は
      <%= link_to "こちら", :style => "margin:8px; text-decoration:none; color:#61C359;" %>
      <div>
        登録がお済みでない方
        <%= link_to "こちら", new_end_user_registration_path, :style => "margin:8px; text-decoration:none; color:#61C359;" %>
        から新規登録を行ってください。
      </div>
      <% end %>
    </div>
  </div>
</body>
