<body class= "topbody">
  <div class="container">
    <div class="form-horizontal">
      <h2 class= "toptext">登録情報</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="">

        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>氏名</td>
              <td>
                <div class="field">
                  <%= f.label "姓(漢字)"%>
                  <%= f.text_field :first_name,placeholder: "長野",autofocus: true %>
                </div>
              </td>
              <td>
                <div class="field">
                  <%= f.label "名(漢字)" %>
                  <%= f.text_field :last_name,placeholder: "太郎" ,autofocus: true %>
                </div>
              </td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>
                <div class="field">
                  <%= f.label "姓(フリガナ)" %>
                  <%= f.text_field :first_name_kana,placeholder: "ナガノ", autofocus: true %>
                </div>
              </td>
              <td>
                <div class="field">
                  <%= f.label "名(フリガナ)" %>
                  <%= f.text_field :last_name_kana,placeholder: "タロウ", autofocus: true %>
                </div>
              </td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td>
                <div class="field">
                  <%= f.text_field :zip_code,placeholder: "7桁で入力して下さい", autofocus: true %>
                </div>
              </td>
            </tr>

            <tr>
              <td>住所</td>
              <td>
                <div class="field">
                  <%= f.text_field :address,placeholder: "住所を入力して下さい", autofocus: true  %>
                </div>
              </td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td>
                <div class="field">
                  <%= f.text_field :phone_number,placeholder: "080XXXXXXXX" , autofocus: true %>
                  </div
                  ></td>
                </tr>
                <tr>
                  <td>メールアドレス</td>
                  <td>
                    <div class="field">
                      <%= f.email_field :email,placeholder: "@gmail", autofocus: true, autocomplete: "email" %>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td>パスワード</td>
                  <td>
                    <div class="field">
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>
                      <br />
                      <%= f.password_field :password,placeholder: "パスワード6桁以上", autocomplete: "new-password" %>
                    </div>
                  </td>
                </tr>

                <tr>
                  <td>パスワード確認</td>
                  <td>
                    <div class="field">
                      <%= f.password_field :password_confirmation,placeholder: "パスワード6桁以上", autocomplete: "new-password" %>
                    </div>
                  </td>
                </tr>
              </div>
              <tr>
              </tr>
            </tbody>
          </table>
                <td>
                  <div class="actions">
                    <%= f.submit "Sign up", class: "genre" %>
                  </div>
                </td>
          <% end %>
        </div>
      </div>
    </div>
  </body>
  <% if flash[:alert] != nil %>
<script>
  window.onload = function(){
    alert("退会済みのアカウントです")
  }
</script>
<% end %>