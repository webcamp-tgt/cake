<div class="container">
	<div class="row">
		<h2>ショッピングカート</h2>
		<div class="empty-cart">
			<%= link_to "カートを空にする",end_users_cart_items_empty_cart_path %>
		</div>

		<table>
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @cart_items.each do |cart_item| %>
				<tr>
					<td>
						<%= cart_item.item.name %>
					</td>
					<td>
						 ¥ <%= cart_item.item.price %>
					</td>
					<td>

						<%= form_for(cart_item, url:end_users_cart_item_path(cart_item),method: :patch) do |f| %>
						<% cart_item.quantity %>
						<%= f.number_field :quantity %>
						<%= f.submit "変更する" %>
						<% end %>
					</td>
					<td>
						¥ <%= cart_item.item.price * cart_item.quantity %>
					</td>
					<td>
						<%= link_to "削除", end_users_cart_item_path(cart_item), method: :delete %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<table>
			<tbody>
				<tr>
					<td>
						合計金額 ¥ <%= @sum %>
					</td>
					<td>
					</td>
				</tr>
			</tbody>
		</table>

		<%= link_to "買い物を続ける", end_users_items_path %>

		<%= link_to "情報入力に進む", new_end_users_order_path %>

	</div>
</div>


