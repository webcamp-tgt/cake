<body>
	<table class="genres_sarch">
		<thead>
			<tr>
				<th>ジャンル検索</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><% link_to "ケーキ", %></td>
			</tr>
			<tr>
				<td><% link_to "焼き菓子", %></td>
			</tr>
			<tr>
				<td><% link_to "プリン", %></td>
			</tr>
			<tr>
				<td><% link_to "キャンディ", %></td>
			</tr>
		</tbody>
	</table>

	<div class="item_image">
		<%= attachment_image_tag @item, :image_id, size: 50, fallback:"no_image.jpg"%>
		<%= @item.name %>
		<%= @item.description %>
		<%= @item.price %>
	</div>

	<%= form_for @item do |f| %>
		<%= f.label :order_quantity, %>
		<%= f.select :order_quantity, [1..30] %>
	<% end %>

</body>