<div class="container">
	<div class="row">
		<body>
			<table class="genres_sarch">
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= link_to genre.name,end_users_path(genre.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

			<div>

				<h1><%= @genre.name %>全<%= @genre.items.count %>件</h1>
			</div>


			<% @genre.items.each do |item| %>
			<div class="item_image">
				<%= link_to end_users_item_path(item) do %>
				<%= attachment_image_tag item, :image, size: 50, fallback:"no_image.jpg"%>
				<% end %>
				<%= item.name %>
				<P>¥<%= item.price %>(税抜き)</P>
			</div>
			<% end %>

		</body>

	</div>
</div>