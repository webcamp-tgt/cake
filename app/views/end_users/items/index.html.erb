<body class= "userbody">
<div class="container">
	<div class="row">
		<body>
			<table class="genres_sarch col-xs-3">
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= link_to genre.name,end_users_items_path(genre.id) %></td>

					</tr>
					<% end %>
				</tbody>
			</table>

			<div class= "col-xs-9">
				<h1><%= @genre.name %>全<%= @genre.items.count %>件</h1>
			</div>

			<% @genre.items.each do |item| %>
			<div class="item_image">
				<div class="item-box">
				<p><%= link_to end_users_item_path(item) do %>
				<%= attachment_image_tag item, :image, size: 50, fallback:"no_image.jpg"%>
				<% end %></p>
				<p><%= item.name %></p>
				<P>¥<%= item.price %>(税抜き)</P>
			</div>
			<% end %>
		</body>
	</div>
</div>
