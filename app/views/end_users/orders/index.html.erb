<body class="ordersbody">
<div class="container">
	<div class="row">
	<h2 class= "toptext">注文履歴一覧</h2>
	<table class="table">
		<thead>
			<tr>
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払い金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
		</thead>
		<tbody>
			<% current_end_user.orders.each do |order| %>
			<tr>
				<td><%= order.created_at.strftime('%Y/%m/%d')  %></td>
				<td><%= order.zip_code %><br>
					<%= order.address %><br>
					<%= order.order_name %>
				</td>


				<!-- 下記の３行を訂正 -->
				<td>
					<% order.items.each do |item| %>
						<%= item.name %><br>
					<% end %>
				</td>
				<td><%= order.total_amount %>円</td>
				<td><%= order.order_status %></td>



				<td><%= link_to "表示する",end_users_order_path(order), class: "order", :style => "text-decoration:none; color:white;"  %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>
</body>
