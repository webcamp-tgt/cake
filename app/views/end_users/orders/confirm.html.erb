<h2>注文情報確認</h2>
<div class="container">
	<div class="row">
		<h2>ショッピングカート</h2>
		<div class="empty-cart">
			<%= link_to "カートを空にする",end_users_cart_items_empty_cart_path %>
		</div>
		<table>
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>

			<tbody>
				<% @sum = 0 %>
				<% current_end_user.cart_items.each do |cart_item| %>
				<tr>
					<td>
						<%= cart_item.item.name %>
					</td>
					<td>
						<%= cart_item.item.price %>
					</td>
					<td>
						<%= cart_item.quantity %>
					</td>
					<td>
						<%= cart_item.item.price * cart_item.quantity %>
					</td>
				</tr>
				<% @sum += cart_item.item.price * cart_item.quantity %>
				<% end %>
			</tbody>
		</table>

		<table>
			<tbody>
				<tr>
					<td>
						合計金額
					</td>
					<td>
						<%= @sum %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>

</div>
<%= link_to "情報入力に進む", new_end_users_order_path %><br>


