<h2>注文情報確認</h2>
<div class="container">
	<div class="row">
		<table>
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>

			<tbody>
				<% @sum = 0 %>
				<% current_end_user.cart_items.each do |cart_item| %>
				<tr>
					<td>
						<%= cart_item.item.name %>
					</td>
					<td>
						<%= cart_item.item.price %>
					</td>
					<td>
						<%= cart_item.quantity %>
					</td>
					<td>
						<%= cart_item.item.price * cart_item.quantity %>
					</td>
				</tr>
				<% @sum += cart_item.item.price * cart_item.quantity %>
				<% end %>
			</tbody>
		</table>

		<table>
			<tbody>
				<tr>
					<td>
						送料
					</td>
					<td>
						<%= 800 %>
					</td>
				</tr>
				<tr>
					<td>
						合計金額
					</td>
					<td>
						<%= @sum %>
					</td>
				</tr>
				<tr>
					<td>
						請求金額
					</td>
					<td>
						<%= 800+@sum %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>

</div>

<h2>支払方法</h2>
<%= @order.payment_method %>
<h2>お届け先</h2>
郵便番号: <%= @order.zip_code %><br>
住所: <%= @order.address %><br>
宛名:<%= @order.order_name %><br>

<%= link_to "購入を確定する", end_users_orders_path,method: :post %><br>

