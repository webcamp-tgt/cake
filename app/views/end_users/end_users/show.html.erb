<body class= "mypage">
	<div class="container">
		<div class="row">
			<div class="bg"></div>
			<div class="bg bg2"></div>
			<div class="bg bg3"></div>
			<h2 class= "toptext">マイページ</h2>

			<h2 class= "toptext">登録情報</h2>


			<% if flash[:notice] %>
  				<p class="message"><%= flash[:notice] %></p>
			<% end %>


			<%= link_to "登録情報変更",edit_end_users_end_user_path, class: "mypageb", :style => "text-decoration:none; color:white; margin:20px;" %>
			<%= link_to "パスワードを変更する",edit_end_user_registration_path, class: "mypageb", :style => "text-decoration:none; color:white; margin:20px;" %>

			<table class="table table-bordered">
				<thead>
					<tr>
						<th>氏名</th>
						<td>
							<%= @end_user.first_name %>
							<%= @end_user.last_name %>
						</td>
					</tr>
					<tr>
						<th>カナ</th>
						<td>
							<%= @end_user.first_name_kana %>
							<%= @end_user.last_name_kana %>
						</td>
					</tr>
					<tr>
						<th>郵便番号</th>
						<td><%= @end_user.zip_code %></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= @end_user.address %></td>
					</tr>
					<tr>
						<th>電話番号</th>
						<td><%= @end_user.phone_number %></td>
					</tr>
					<tr>
						<th>メールアドレス</th>
						<td><%= @end_user.email %></td>
					</tr>
				</thead>
			</table>

			<h2 class= "toptext">配送先</h2>
			<%= link_to "一覧を見る",end_users_shipping_addresses_path, class: "mypageb2", :style => "text-decoration:none; color:white; margin:20px;" %>

			<h2 class= "toptext">注文履歴</h2>
			<%= link_to "一覧を見る",end_users_orders_path, class: "mypageb2",:style => "text-decoration:none; color:white; margin:20px;" %>

		</div>
	</div>
</body>
