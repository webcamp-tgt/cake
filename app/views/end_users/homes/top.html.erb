<div class="container">
	<div class="row">
		<table class="genres_sarch">
			<thead>
				<tr>
					<th>ジャンル検索</th>
				</tr>
			</thead>
			<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td><%= link_to genre.name,end_users_path(genre.id) %></td>
					</tr>
					<% end %>
				</tbody>
		</table>
		<h1>一覧(全<%= @items.count %>件)</h1>
		<% @items.each do |item| %>
					<div class="item-box">
						<p><%= link_to end_users_item_path(item) do %>
							<%= attachment_image_tag item, :image, size: 50, fallback:"no_image.jpg"%>
							<% end %></p>
						<p><%= item.name %></p>
						<p>¥<%= item.price %></p>
					</div>
					<% end %>
	</div>
</div>