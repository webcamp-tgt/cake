<body class= "shippingbody">
	<div class="container">
	<div class="row">
	<h2 class= "toptext">配送先編集</h2>
	<%= form_for(@shipping_address,url:end_users_shipping_address_path, method: :put) do |f| %>
	<table class= "table table-bordered">
		<thead>
			<tr>
				<th>郵便番号</th>
				<td><%= f.text_field :zip_code %></td>
			</tr>
			<tr>
				<th>住所</th>
				<td><%= f.text_field :address %></td>
			</tr>
			<tr>
				<th>宛名</th>
				<td><%= f.text_field :order_name %></td>
			</tr>
		</thead>
	</table>
	<%= f.submit "保存", class: "shippingb", :style => "margin:20px;" %>
	<% end %>
	</div>
</div>
</body>