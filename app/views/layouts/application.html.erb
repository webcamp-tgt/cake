<!DOCTYPE html>
<html>
<head>
  <title>TgtCake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="sticky-top">
    <h1>ながのCAKE</h1>
    <nav class="container">
      <% if end_user_signed_in? %>
      <ul class="nav navbar-nav">
        <li>
           <%= link_to 'my.page' %>
        </li>
        <li>
          <%= link_to 'About', end_users_homes_about_path %>
        </li>
        <li>
          <%= link_to 'logout', destroy_end_user_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to 'cart'%>
        </li>
      <% elsif admin_signed_in? %>
      <li>
          <%= link_to '商品一覧', admins_items_path %>
        </li>
        <li>
          <%= link_to '会員一覧', admins_end_users_path %>
        </li>
        <li>
          <%= link_to '注文履歴一覧' %>
        </li>
        <li>
          <%= link_to 'ジャンル管理', admins_genres_path %>
        </li>
        <li>
          <%= link_to 'logout', destroy_end_user_session_path, method: :delete %>
        </li>

      <% else %>
      <li>
        <%= link_to 'log in', new_end_user_session_path %>
      </li>
      <li>
        <%= link_to 'sign in', new_end_user_registration_path %>
      </li>
      <li>
        <%= link_to 'About', homes_about_path %>
      </li>
      <% end %>
    </ul>
  </nav>
</header>
<footer class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-9">
      <p>©ながのCAKE Production by TGT</p>
    </div>
  </footer>
</body>
</html>
