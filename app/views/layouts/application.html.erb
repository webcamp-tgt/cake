<!DOCTYPE html>
<html>
<head>
  <title>TgtCake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="sticky-top">
    <h1>ながのCAKE</h1>
    <nav class="container">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to 'log in', new_end_user_session_path %>
        </li>
        <li>
          <%= link_to 'sign in', new_end_user_registration_path %>
        </li>
        <li>
          <%= link_to 'About', homes_about_path %>
        </li>

        <li>
          <%= link_to 'cart'%>
        </li>
        <li>
          <%= link_to 'logout', destroy_end_user_session_path, method: :delete %>
        </li>
      </ul>
    </nav>
  </header>
  <%= yield %>
  <footer class="container">
    <div class="row">
    <div class="col-xs-3 col-xs-offset-9">
    <p>©ながのCAKE Production by TGT</p>
  </div>
  </footer>
</body>
</html>
