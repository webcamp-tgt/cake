<h1>注文一覧画面</h1>
<table>
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>購入個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<%= @orders.each do |order| %>
		<tr>
			<td><%= link_to order.creat_at, admins_order_path(order) %></td>
			<td><%= order.full_name %></td>
			<td><%= order.order_item.order_quantity %></td>
			<td><%= order.order_status %></td>
		</tr>

		<% end %>
	</tbody>
</table>
