<div class="container">
	<div class="row">
		<h2>ジャンル編集画面</h2>

		<label>ジャンル</label>
		<%= form_for(@genre,url:admins_genre_path(@genre), method: :patch) do |f| %>

		<!-- ここにラジオボタン追加 -->
		<div class="col-xs-3">
			<div>
				<label>
					<%= f.radio_button :is_active, true %>有効
				</label>
				<label>
					<%= f.radio_button :is_active, false %>無効
				</label>
			</div>
		</div>
		<%= f.text_field :name%>

		<%= f.submit "変更保存" %>
		<% end %>
	</div>
</div>