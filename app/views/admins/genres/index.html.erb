<h1>ジャンル追加・一覧画面</h1>

<label>ジャンル</label>
<%= form_for(@genre,url:admins_genres_path, method: :post) do |f| %>

<%= f.text_field :name%>
<!-- ここにラジオボタン追加 -->
<p>
	<input type="radio" name="is_active" value="有効"> 有効
	<input type="radio" name="is_active" value="無効"> 無効
</p>
<%= f.submit "追加" %>
<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td>
				<%= genre.name %>
			</td>
			<td>
				<%= genre.is_active %>
			</td>
			<td>
				<%= link_to "編集する", edit_admins_genre_path(genre.id) %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
