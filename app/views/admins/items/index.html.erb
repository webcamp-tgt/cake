<body class="abody">
<div class="container">
	<div class="row">
		<h2 class= "atoptext">商品一覧画面</h2>

		<%= link_to new_admins_item_path, class: "admin" do %>
		<i class="fas fa-plus"></i>
		<% end %>

<table class="table">
	<thead>
		<tr>
			<th class= "atoptext">商品ID</th>
			<th class= "atoptext">商品名</th>
			<th class= "atoptext">税抜価格</th>
			<th class= "atoptext">ジャンル</th>
			<th class= "atoptext">ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td class= "atoptext"><%= item.id %></td>
			<td class= "atoptext"><%= link_to item.name, admins_item_path(item) %></td>
			<td class= "atoptext">¥<%= item.price %></td>
			<td class= "atoptext"><%= item.genre.name%></td>
			<td class= "atoptext"><%= item.sale_status %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
