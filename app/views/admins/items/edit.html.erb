<div class="container">
	<div class="row">
		<body>
			<h1>商品 編集画面</h1>

			<%= form_for(@item, url:admins_item_path, method: :patch) do |f| %>
			<%= attachment_image_tag @item, :image, :fill, 60, 60,format: "jpeg", fallback: "no_image.jpg"%>
			<div>
				<label>商品名</label>
				<%= f.text_field :name%>

				<label>商品説明</label>
				<%= f.text_area :description%>

				<label>ジャンル</label>
				<%= f.collection_select :genre_id, Genre.all, :id, :name %>
				<label>税抜価格</label>
				<%= f.text_field :price%>

				<label>販売ステータス</label>
				<%= f.select :sale_status, Item.sale_statuses.keys, {} %>
				<%= f.submit "保存" %>
				<% end %>
			</div>
		</body>
	</div>
</div>